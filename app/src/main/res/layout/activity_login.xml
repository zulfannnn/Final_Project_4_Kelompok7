<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".LoginActivity">
    <ImageView
        android:layout_width="324dp"
        android:layout_height="324dp"
        android:layout_marginTop="18dp"
        android:layout_gravity="center"
        android:background="@drawable/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:text="Log In"
        android:textSize="32sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_textfield">
            <ImageView
                android:id="@+id/logogoogle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/person"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/ETUsernameLoginwithphone"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:background="#00000000"
                android:layout_toRightOf="@+id/logogoogle"
                android:hint="Username"
                android:inputType="textPersonName"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/text"
                android:textSize="14sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_textfield">
            <ImageView
                android:id="@+id/logophone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/password"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/ETPasswordLoginwithphone"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:background="#00000000"
                android:layout_toRightOf="@+id/logophone"
                android:hint="Password"
                android:inputType="textPassword"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/text"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:background="@drawable/btn_blue">
            <Button
                android:id="@+id/btn_loginwithphone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:text="Log In"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_gravity="end"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Punya Akun?"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/text"/>
        <TextView
            android:id="@+id/kemenuregistrasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Registrasi"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/blue"/>
    </LinearLayout>
</LinearLayout>